<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
            <gradient
                android:angle="135"
                android:centerColor="#24082E"
                android:endColor="#20424A"
                android:startColor="#290F3B"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
            <gradient
                android:angle="0"
                android:endColor="#337B61FF"
                android:startColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
